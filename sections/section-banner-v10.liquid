<div data-section-id="{{ section.id }}" data-section-type="section-banner-v10" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v10 mt-all ">
    <div class="container container-v2">
      <div class="row">   
        <div class="col-lg-4 col-md-4 mb-3 ">
          <div class="box-info">
            <div class="box-img">
              {% if section.settings.img_banner1 != blank %}
              <a href="{{section.settings.url_banner1}}"><img data-src="{{section.settings.img_banner1 | img_url:'master'}}" class="lazyload w-100 img-fluid" alt></a>
              {% else %}
              <a href="{{section.settings.url_banner1}}"><img data-src="//placehold.it/822x509" class="lazyload w-100 img-fluid" alt=""></a>
              {% endif %}
            </div>
            <div class="content-banner">
              <div class="list-inline info-top"> 
                {% if section.settings.title_1 != blank %}
                <h3 class="title mb-0 list-inline-item" style="color : {{section.settings.color_title_1}}">{{section.settings.title_1}}</h3>
                {% endif %}
              </div>
              {% if section.settings.button_1 != blank %}
              <a href="{{section.settings.url_button1}}" class="button-shop button-shop1" style="color : {{section.settings.color_text_button_1}} ;background-color:{{section.settings.color_button_1}}">{{section.settings.button_1}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 mb-3 ">
          <div class="box-info">
            <div class="box-img">
              {% if section.settings.img_banner2 != blank %}
              <a href="{{section.settings.url_banner2}}"><img data-src="{{section.settings.img_banner2 | img_url:'master'}}" class="lazyload w-100 img-fluid" alt></a>
              {% else %}
              <a href="{{section.settings.url_banner2}}"><img data-src="//placehold.it/822x509" class="lazyload w-100 img-fluid" alt=""></a>
              {% endif %}
            </div>
            <div class="content-banner">
              <div class="list-inline info-top"> 
                {% if section.settings.title_2 != blank %}
                <h3 class="title mb-0 list-inline-item" style="color : {{section.settings.color_title_2}}">{{section.settings.title_2}}</h3>
                {% endif %}
              </div>
              {% if section.settings.button_2 != blank %}
              <a href="{{section.settings.url_button2}}" class="button-shop button-shop2" style="color : {{section.settings.color_text_button_2}} ;background-color:{{section.settings.color_button_2}}">{{section.settings.button_2}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 mb-3 ">
          <div class="box-info">
            <div class="box-img">
              {% if section.settings.img_banner3 != blank %}
              <a href="{{section.settings.url_banner3}}"><img data-src="{{section.settings.img_banner3 | img_url:'master'}}" class="lazyload w-100 img-fluid" alt></a>
              {% else %}
              <a href="{{section.settings.url_banner3}}"><img data-src="//placehold.it/833x509" class="lazyload w-100 img-fluid" alt=""></a>
              {% endif %}
            </div>
            <div class="content-banner">
              <div class="list-inline info-top"> 
                {% if section.settings.title_3 != blank %}
                <h3 class="title mb-0 list-inline-item" style="color : {{section.settings.color_title_3}}">{{section.settings.title_3}}</h3>
                {% endif %}

              </div>
              {% if section.settings.button_3 != blank %}
              <a href="{{section.settings.url_button3}}" class="button-shop button-shop3" style="color : {{section.settings.color_text_button_3}} ;background-color:{{section.settings.color_button_3}}">{{section.settings.button_3}}</a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section-banner-v10 .box-info .content-banner .button-shop1:hover{
    color: {{section.settings.color_text_hover_1}} !important;
    background : {{section.settings.color_hover_1}} !important;
  }
  .section-banner-v10 .box-info .content-banner .button-shop2:hover{
