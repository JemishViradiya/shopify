  "name": "PRODUCT V6",
  "settings": [
	 {
      "type": "select",
      "id": "section_layout",
      "label": "Section Layout",
      "options": [
        {
          "value": "banner_left",
          "label": "Banner Left"
        },
        {
          "value": "banner_right",
