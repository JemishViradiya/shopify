<div data-section-id="{{ section.id }}" data-section-type="section-banner-v9" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v9 mt-all">
    <div class="lazyload">
      <div class="container container-v2">
        <div class="relative banner-v9 " style="background-image: url({% if section.settings.img_banner != blank %}{{section.settings.img_banner | img_url: 'master'}} {% else %} //placehold.it/1670x400 {% endif %})">
          <a href="{{section.settings.url_button}}" class="d-block box-img">
            {% if section.settings.img_banner != blank %}
            <img data-src="{{section.settings.img_banner | img_url:'master'}}" class="lazyload img-fluid w-100" alt="_img">
            {% else %}
            <img data-src="//placehold.it/1670x400" class="lazyload img-fluid w-100" alt="_img">
            {% endif %}
          </a>
          <div class="content-banner">
            {% if section.settings.title_banner != blank %}
            <h3 class="title-banner" style="color: {{section.settings.color_title}}">{{section.settings.title_banner}}</h3>
            {% endif %}
            {% if section.settings.button_banner != blank %}
            <a href="{{section.settings.url_button}}" class="button-banner">{{section.settings.button_banner}}</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "BANNER V9",
  "settings": [
	{
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
  	{
      "type": "header",
      "content": "Settings Banner 9"
    },
	
	{
      "type": "text",
      "id": "title_banner",
      "label": "Title Banner",
      "default": "Ceramic: an eco-friendly material?"
    },
    {
      "type": "color",
      "id": "color_title",
      "label": "Color Title",
      "default": "#fff"
    },

  	{
      "type": "text",
      "id": "button_banner",
      "label": "Button Banner 1",
      "default": "READ NOW"
    },

  	{
      "type": "url",
      "id": "url_button",
      "label": "URL Button Banner",
      "default": "/collections/all"
    },
	{
      "type": "image_picker",
      "id": "img_banner",
      "label": "Image Banner",
	  "info": "1670 x 400px recommended"
    }

  ],
  "presets": [
    {
      "name": "BANNER V9",
      "category": "HOME"
    }
  ]
}
{% endschema %}

